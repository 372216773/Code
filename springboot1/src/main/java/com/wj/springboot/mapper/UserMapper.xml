<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<!--对应类-->
<mapper namespace="com.wj.springboot.mapper.UserMapper">
    <!--对应类中的方法-->
    <select id="findById" resultType="com.wj.springboot.entity.User">
        select *
        from user
        where id = #{id}
    </select>
</mapper>